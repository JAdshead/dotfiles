# aliases

alias ls='ls -1GAF'
alias psg='ps aux | grep'
alias now='date +"%H:%M"'
alias week='date +%V'
alias src='source ~/.zshrc'

# Heroku realtime logs
alias hl="heroku logs --tail"

#Rails
alias rake="bundle exec rake"
alias rspec="bundle exec rspec"
alias be="bundle exec"
alias rs="bundle exec rails server"

alias ru='bundle exec rackup'
alias dber='dotenv bundle exec rackup'


#RSPEc
alias runspec="bundle exec rspec"

# aliases for osx
alias dns='dscacheutil -flushcache'

# Stopwatch
alias timer='echo "Timer started. Stop with Ctrl-D." && date && time cat && date'

# Brew updates.
alias update='brew update;echo "\nOutdated:\n";brew outdated; brew upgrade --all; brew cleanup; brew doctor'

# IP addresses
alias myip="dig +short myip.opendns.com @resolver1.opendns.com"
alias localip="ipconfig getifaddr en0"

# Show/hide hidden files in Finder
alias showhidden="defaults write com.apple.finder AppleShowAllFiles -bool true && killall Finder"
alias hidehidden="defaults write com.apple.finder AppleShowAllFiles -bool false && killall Finder"

